{
  "name": "serverless-express-ts-template",
  "version": "0.2.0",
  "main": "serverless.ts",
  "repository": "https://github.com/beerjoa/serverless-express-ts-template.git",
  "author": "Jaeyong Shim <hello@beerjoa.dev>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf .build && tsc",
    "start": "rimraf .build && sls offline -s dev",
    "lint": "eslint . --ext .ts",
    "test:integration": "jest --runInBand --config ./jest.config.ts tests/integration",
    "test:unit": "jest --runInBand --config ./jest.config.ts --testPathPattern",
    "test:unit:watch": "jest --runInBand --config --watch ./jest.config.ts --testPathPattern",
    "test:unit:all": "jest --runInBand --config ./jest.config.ts --testPathPattern tests/unit/*.spec.ts",
    "deploy": "sls deploy",
    "remove": "sls remove"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "class-validator-jsonschema": "^5.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "http-terminator": "^3.2.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.10.4",
    "routing-controllers-openapi": "^4.0.0",
    "serverless-http": "^3.2.0",
    "swagger-ui-express": "^4.6.3",
    "typedi": "^0.10.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/types": "^17.4.4",
    "@jest-mock/express": "^2.0.2",
    "@serverless/typescript": "^3.30.1",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/http-terminator": "^2.0.2",
    "@types/jest": "^29.5.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.3.3",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0-alpha.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "serverless": "^3.33.0",
    "serverless-offline": "^12.0.4",
    "serverless-plugin-typescript": "^2.1.5",
    "serverless-tscpaths": "^0.0.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}
